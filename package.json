{
  "name": "microrealestate",
  "private": true,
  "workspaces": {
    "packages": [
      "types",
      "services/api",
      "services/authenticator",
      "services/common",
      "services/emailer",
      "services/gateway",
      "services/pdfgenerator",
      "services/resetservice",
      "services/tenantapi",
      "webapps/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach -ptv run build",
    "lint": "yarn workspaces foreach -ptv run lint",
    "format": "yarn workspaces foreach -ptv run format",
    "clean": "yarn workspaces foreach -ptv run clean"
  }
}
